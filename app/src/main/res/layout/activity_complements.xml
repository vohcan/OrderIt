<?xml version="1.0" encoding="utf-8"?>



<android.support.v7.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/activity_horizontal_margin"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp">

    <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/complemet_dish_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            tools:context="com.vohcan.orderit.activity.DishActivity">


            <TextView
                android:id="@+id/dish_complemet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Elige el complemento"

                android:layout_alignParentLeft="true"
                android:layout_marginTop="15dp"
                android:textSize="24sp"
                android:textStyle="normal|bold" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/dish_radiogroup"
                android:layout_below="@id/dish_complemet"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <RadioButton
                    android:text="Patatas Fritas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/chips_rbutton"
                    android:layout_weight="1"
                    android:textSize="10sp"/>
                <RadioButton
                    android:text="Patata Asada"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/potato_rbutton"
                    android:layout_weight="1"
                    android:textSize="10sp"/>
                <RadioButton
                    android:text="Ensalada de col"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/salad_rbutton"
                    android:layout_weight="1"
                    android:textSize="10sp"/>
            </RadioGroup>
            <Button

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="elegir"
                android:id="@+id/send_button"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/dish_radiogroup"
                android:textAllCaps="false" />




        </RelativeLayout>




</android.support.v7.widget.CardView>
