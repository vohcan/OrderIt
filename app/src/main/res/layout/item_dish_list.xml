<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/activity_horizontal_margin"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp">
    <FrameLayout android:layout_width="match_parent"
                 android:layout_height="match_parent">
        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/activity_dish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            tools:context="com.vohcan.orderit.activity.DishActivity">


            <LinearLayout
                android:id="@+id/content_layout"
                android:orientation="vertical"
                android:layout_toRightOf="@+id/dish_image"
                android:layout_marginLeft="10dp"
                android:layout_alignParentTop="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hamburguesa"
                    android:id="@+id/dish_name"
                    android:textSize="24sp"
                    android:textStyle="normal|bold"/>



                <TextView
                    android:id="@+id/dish_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Precio"
                    android:textSize="18sp"/>

            </LinearLayout>
            <ImageView
                android:id="@+id/dish_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/yankee_g"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"/>

            <TextView
                android:id="@+id/dish_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DescripciÃ³n"
                android:layout_below="@id/dish_image"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="15dp"
                android:textSize="14sp"/>


            <TextView
                android:id="@+id/dish_allergens"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/content_layout"
                android:layout_toRightOf="@+id/dish_image"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:text="alergeno"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/dish_allergens"
                android:layout_toRightOf="@+id/dish_image"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
            >

                <ImageView
                    android:id="@+id/dish_allergen1_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/cacahuete32"
                    android:layout_marginRight="10dp"/>
                <ImageView
                    android:id="@+id/dish_allergen2_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/cacahuete32"
                    android:layout_marginRight="10dp"/>
                <ImageView
                    android:id="@+id/dish_allergen3_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/cacahuete32"
                    android:layout_marginRight="10dp"/>
            </LinearLayout>

        </RelativeLayout>

    </FrameLayout>


</android.support.v7.widget.CardView>